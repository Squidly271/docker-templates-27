<?xml version="1.0"?>
<Container version="2">
  <TemplateURL>https://raw.githubusercontent.com/ich777/docker-templates/master/ich777/CSSource.xml</TemplateURL>
  <Name>CSSource</Name>
  <Date>2019-04-16</Date>
  <Repository>ich777/steamcmd</Repository>
  <Registry>https://hub.docker.com/r/ich777/steamcmd/</Registry>
  <Network>bridge</Network>
  <Project>https://www.steampowered.com/</Project>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://forums.unraid.net/topic/79530-support-ich777-steamcmd-dockers/</Support>
  <Project>https://www.steampowered.com/</Project>
  <Overview>This Docker will download and install SteamCMD. It will also install Counter-Strike: Source and run it.&#xD;
&#xD;
ATTENTION: First Startup can take very long since it downloades the gameserver files!
&#xD;
Update Notice: Simply restart the container if a newer version of the game is available.
&#xD;
You can also run multiple servers with only one SteamCMD directory!</Overview>
  <Beta>False</Beta>
  <Category>Other:</Category>
  <WebUI/>
  <Icon>https://raw.githubusercontent.com/ich777/docker-templates/master/ich777/images/css.png</Icon>
  <ExtraParams>--restart=unless-stopped</ExtraParams>
  <PostArgs/>
  <DonateText/>
  <DonateLink/>
  <Description>This Docker will download and install SteamCMD. It will also install Counter-Strike: Source and run it.&#xD;
&#xD;
Update Notice: Simply restart the container if a newer version of the game is available.
&#xD;
You can also run multiple servers with only one SteamCMD directory!</Description>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>27015</HostPort>
        <ContainerPort>27015</ContainerPort>
        <Protocol>udp</Protocol>
      </Port>
      <Port>
        <HostPort>27015</HostPort>
        <ContainerPort>27015</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/steamcmd</HostDir>
      <ContainerDir>/serverdata/steamcmd</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/cstrikesource</HostDir>
      <ContainerDir>/serverdata/serverfiles</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Value>232330</Value>
      <Name>GAME_ID</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>cstrike</Value>
      <Name>GAME_NAME</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>-secure +maxplayers 32 +map de_dust2</Value>
      <Name>GAME_PARAMS</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>27015</Value>
      <Name>GAME_PORT</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>99</Value>
      <Name>UID</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>100</Value>
      <Name>GID</Name>
      <Mode/>
    </Variable>
  </Environment>
  <Labels/>
  <Config Name="SteamCMD" Target="/serverdata/steamcmd" Default="" Mode="rw" Description="Container Path: /serverdata/steamcmd" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/steamcmd</Config>
  <Config Name="ServerFiles" Target="/serverdata/serverfiles" Default="" Mode="rw" Description="Container Path: /serverdata/serverfiles" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/cstrikesource</Config>
  <Config Name="GAME_ID" Target="GAME_ID" Default="" Mode="" Description="The GAME_ID that the container download at startup.&#13;&#10;(https://developer.valvesoftware.com/wiki/Dedicated_Servers_List)" Type="Variable" Display="always" Required="true" Mask="false">232330</Config>
  <Config Name="GAME_NAME" Target="GAME_NAME" Default="" Mode="" Description="Game name to start (is connected to the GAME_PARAMS)." Type="Variable" Display="always" Required="true" Mask="false">cstrike</Config>
  <Config Name="GAME_PARAMS" Target="GAME_PARAMS" Default="" Mode="" Description="Enter your start up commands for the server." Type="Variable" Display="always" Required="false" Mask="false">-secure +maxplayers 32 +map de_dust2</Config>
  <Config Name="UDP" Target="27015" Default="" Mode="udp" Description="UDP Gameport (if you need another port, please delete this entry and create a new UDP Port with the required port number, also don't forget to click an 'Show more settings ...' and change the port number" Type="Port" Display="always" Required="true" Mask="false">27015</Config>
  <Config Name="TCP RCON" Target="27015" Default="" Mode="tcp" Description="TCP RCON Port (not required)" Type="Port" Display="always" Required="false" Mask="false">27016</Config>
  <Config Name="GAME_PORT" Target="GAME_PORT" Default="" Mode="" Description="Container Variable: GAME_PORT" Type="Variable" Display="advanced" Required="false" Mask="false">27015</Config>
  <Config Name="UID" Target="UID" Default="" Mode="" Description="Container Variable: UID" Type="Variable" Display="advanced-hide" Required="true" Mask="false">99</Config>
  <Config Name="GID" Target="GID" Default="" Mode="" Description="Container Variable: GID" Type="Variable" Display="advanced-hide" Required="true" Mask="false">100</Config>
</Container>
